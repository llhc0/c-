#include <iostream>;
using namespace std;
int main()
{
  //三只小猪练习题
  int num1 = 0;
  int num2 = 0;
  int num3 = 0;

  cout<<"请输入a小猪的体重"<<endl;
  cin>>num1;
  cout<<"请输入b小猪的体重"<<endl;
  cin>>num2;
  cout<<"请输入c小猪的体重"<<endl;
  cin>>num3;
  if(num1>num2)
  {
    if(num1>num3)
    {
      cout<<"小猪a最重"<<endl;
    }
    else
    {
      cout<<"小猪c最重"<<endl;
    }
  }
  else
  {
    if(num2>num3)
    {
      cout<<"小猪b最重"<<endl;
    }
    else
    {
      cout<<"小猪c最重"<<endl;
    }
  system("pause");
  return 0';
}
